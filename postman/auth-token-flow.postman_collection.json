  "item": [
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Save access and refresh tokens', function () {",
              "  const responseBodyJson = pm.response.json();",
              "  pm.expect(responseBodyJson).to.have.property('data');",
              "  pm.expect(responseBodyJson.data).to.have.property('access_token');",
              "  pm.expect(responseBodyJson.data).to.have.property('refresh_token');",
              "",
              "  pm.collectionVariables.set('accessToken', responseBodyJson.data.access_token);",
              "  pm.collectionVariables.set('refreshToken', responseBodyJson.data.refresh_token);",
              "  pm.environment.set('accessToken', responseBodyJson.data.access_token);",
              "  pm.environment.set('refreshToken', responseBodyJson.data.refresh_token);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
