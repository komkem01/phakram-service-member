          "name": "admin-login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Save access token', function () {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body).to.have.property('data');",
                  "  pm.expect(body.data).to.have.property('access_token');",
                  "  pm.collectionVariables.set('accessToken', body.data.access_token);",
                  "  pm.environment.set('accessToken', body.data.access_token);",
                  "  pm.execution.setNextRequest('cart-create');",
                  "});"
                ]
              }
            }
          ],
